---
- name: add mysql user and install mysql
  hosts: mysql
  max_fail_percentage: 2
  tasks:
        - name: create user
          user: 
            name: "{{ user }}"
            state: present

        - name: add user
          shell: useradd mysql
          ignore_errors: yes

        - name: config path
          shell: echo "export PATH=/usr/local/mysql56/bin:$PATH" >> /root/.bashrc;source /root/.bashrc
          register: shell_output

